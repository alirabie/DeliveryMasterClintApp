<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="app.appsmatic.com.deliverymasterclintapp.SignIn"
    android:background="@drawable/signinscreenbackg"
    android:orientation="vertical"
    android:gravity="end">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="35dp"
        android:id="@+id/loginlayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:paddingTop="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phonenum_login"
            android:background="@drawable/inputfield"
            android:textSize="25dp"
            android:hint="@string/hintloginphonenumber"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:background="@drawable/inputfield"
            android:textSize="25dp"
            android:hint="@string/hintloginpassword"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginTop="20dp"
            android:id="@+id/password_login" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginbtn"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/signinbtn"
            android:layout_marginTop="25dp" />

    </LinearLayout>

</LinearLayout>
