<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="app.appsmatic.com.deliverymasterclintapp.Activites.ShoppingCart"
android:orientation="vertical"
    android:background="#ffffff">
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:id="@+id/cart_meals_list"
    android:background="#ffffff"
    android:layout_alignWithParentIfMissing="false"
    android:layout_alignParentBottom="false"
    android:layout_alignParentEnd="false"
    android:layout_alignParentStart="false"
    android:layout_below="@+id/cart_price_tv"
    android:padding="3dp">
</android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/cart_meals_list"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cart_pickup_btn"
            android:src="@drawable/cart_picup_btn_english"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cart_delvery_btn"
            android:src="@drawable/cart_delivery_btn_english"
            android:layout_weight="1"
            android:clickable="true"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/shoppingcartempty"
        android:id="@+id/tv_cart_empty"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price : 50 SR"
        android:id="@+id/cart_price_tv"
        android:gravity="center"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" />

</RelativeLayout>
