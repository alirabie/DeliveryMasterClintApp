<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activites.SignIn"
    android:background="@drawable/signinscreenbackg"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="35dp"
        android:id="@+id/loginlayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:paddingTop="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phonenum_login"
            android:background="@drawable/inputfield"
            android:textSize="20dp"
            android:hint="@string/hintloginphonenumber"
            android:padding="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/inputfield"
            android:textSize="20dp"
            android:hint="@string/hintloginpassword"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:padding="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_marginTop="15dp"
            android:id="@+id/password_login" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginbtn"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/signinbtn"
            android:layout_marginTop="25dp"
            android:clickable="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/forgetpassword"
                android:id="@+id/tv_forgetpass"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffa600"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_newaccount"
                android:text="@string/newaccount"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffa600"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:clickable="true"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
